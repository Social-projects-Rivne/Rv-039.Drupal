{# #}
{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished'
  ]
%}
{% block paragraph %}
  <div{{ attributes.addClass(classes) }}>
    {% block content %}
      <div class= "content-section" style="background-color:#{{background_color}} ">
          <div class="container">
            {{content.field_shared_content}}
          </div>
      </div>
    {% endblock %}
  </div>
{% endblock paragraph %}
