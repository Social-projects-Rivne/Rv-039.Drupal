{# #}
{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished'
  ]
%}
{% block paragraph %}
  <div{{ attributes.addClass(classes) }}>
    {% block content %}
      <div id = "aditional_inf_background" class = "align-items-center">
          <div class = "container">
            <div class = "row justify-content-center">
                  <div class="col-12">
                   <h1>{{ content.field_shared_h1_white_title }}</h1>
                  </div>
                  <div class="shared_adit_inf_btns justify-content-center">
                      {{content.field_shared_button_link[0]}}
                      {{content.field_shared_button_link[1]}}
                  </div>
            </div>
        </div>
      </div>
    {% endblock %}
  </div>
{% endblock paragraph %}


